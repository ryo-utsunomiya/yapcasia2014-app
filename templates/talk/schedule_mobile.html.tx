<!DOCTYPE html>
<html ng-app="yapc2014">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,
                                   initial-scale=1, maximum-scale=1,
                                   minimum-scale=1, user-scalable=no">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <title>YAPC::Asia Tokyo 2014</title>
    <!-- Path to Framework7 Library CSS-->
    <link rel="stylesheet" href="/2014/static/mobile/css/framework7.min.css">
    <!-- Path to your custom app styles-->
    <link rel="stylesheet" href="/2014/static/mobile/css/mobile-app.css">
  </head>
  <body>
    <div class="views">
      <div class="view view-main">
        <div class="navbar">
          <div class="navbar-inner">
            <div class="center sliding">YAPC::Asia Tokyo 2014</div>
          </div>
        </div>
        <div class="pages navbar-through toolbar-through">
          <div page-data="index" class="page">
            <div class="page-content">
              <div ng-controller="DateController" ng-init="change_date();" class="buttons-row schedule-tabs">
                <a href="#tab1" class="tab-link button " data-date="2014-08-28">Thu 8/28</a>
                <a href="#tab2" class="tab-link button " data-date="2014-08-29">Fri 8/29</a>
                <a href="#tab3" class="tab-link button " data-date="2014-08-30">Sat 8/30</a>
              </div>

              <div id="schedule" class="content-block" ng-controller="ScheduleController" ng-init="load();">
                <div ng-controller="TalkController">
                  <div ng-repeat="(start_time, talks) in talk_set">
                    <div class="content-block-title">{{ start_time }}</div>
                    <div class="list-block media-list">
                      <ul ng-repeat="talk in talks">
                        <li>
                          <div class="item-wrapper" ng-class="'talk-' + talk.id">
                            <div class="popup">
                              <div class="content-block">
                                <h3 class="entry-title">{{ talk.title || talk.title_en }}</h3>
                                <div class="entry-media">
                                  <img ng-src="{{ talk.speaker.profile_image_url }}" width="60">
                                </div>
                                <div class="entry-info">
                                  <div class="entry-text">start: <b>{{ start_time }}</b>
                                    / duration: <b>{{ talk.duration }}</b>min
                                  </div>
                                  <div class="entry-text">by: <b>{{ talk.speaker.name }}</b></div>
                                 <div class="entry-text">at: <b>{{ talk.venue_name }}</b></div>
                                </div>
                                <div class="clear"></div>
                                <div class="entry-abstract" ng-bind-html="talk.abstract_html"></div>
                                <p><a href="#" class="button button-round close-popup">Close</a></p>
                              </div>
                            </div>
                            <!-- /END of popup -->
                            <a href="#" class="item-content" ng-click="show_detail(talk.id);">
                              <div class="item-media"><img ng-src="{{ talk.speaker.profile_image_url }}" width="50"></div>
                              <div class="item-inner">
                                <div class="item-title-row">
                                  <div class="item-title">{{ talk.title || talk.title_en }}</div>
                                </div>
                                <div class="item-text">{{ talk.venue_name }} {{ talk.duration }}min</div>
                              </div>
                            </a>
                          </div>
                        </li>
                      </ul>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="toolbar">
          <div class="toolbar-inner">
            <a href="#" class="link">Schedules</a>
            <a href="#" class="link">Maps</a>
          </div>
        </div>
      </div>
    </div>
    <script type="text/javascript" src="/2014/static/mobile/js/framework7.js"></script>
    <script type="text/javascript" src="/2014/static/mobile/js/jquery.min.js"></script>
    <script type="text/javascript" src="/2014/static/mobile/js/angular.min.js"></script>
    <script type="text/javascript" src="/2014/static/mobile/js/sanitize.js"></script>
    <script type="text/javascript" src="/2014/static/mobile/js/mobile-app.js"></script>
  </body>
</html>

